<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.susu.oss.dao.UploadDao">

	<resultMap id="resultMap" type="com.susu.oss.entity.UploadEntity">
		<result column="id" property="id" />
		<result column="ip" property="ip"/>
		<result column="type" property="type"/>
		<result column="size" property="size"/>
		<result column="file_id" property="fileId"/>
		<result column="create_date" property="createDate"/>
		<result column="update_date" property="updateDate"/>
	</resultMap>

	<sql id="whereParams">
		<where>
			<if test="name != null and name != ''">
				`name` like "%" #{name} "%"
			</if>
		</where>
	</sql>

	<select id="queryList" resultMap="resultMap">
		SELECT * FROM `upload`
		<include refid="whereParams"></include>
		ORDER BY update_date DESC
	</select>

	<select id="selectById" resultMap="resultMap" >
		select * from `upload` where id = #{id}
	</select>

	<insert id="insert" parameterType="com.susu.oss.entity.UploadEntity" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO `upload` (
		<if test="ip != null and ip !=''">
			ip,
		</if>
		<if test="type != null and type !=''">
			type,
		</if>
		<if test="size != null  and size !=''">
			size,
		</if>
		<if test="fileId != null  and fileId !=''">
			file_id,
		</if>
		id)
		VALUES (
		<if test="ip != null and ip !=''">
			#{ip},
		</if>
		<if test="type != null and type !=''">
			#{type},
		</if>
		<if test="size != null and size !=''">
			#{size},
		</if>
		<if test="fileId != null and fileId !=''">
			#{fileId},
		</if>
		#{id})
	</insert>

	<insert id="insertBatch" parameterType="com.susu.oss.entity.UploadEntity">
		INSERT INTO `g_column` (
		id,
		ip,
		type,
		size,
		file_id
		) VALUES
		<foreach collection="list" item="item" index="index" separator="," >
			(
			#{item.id,jdbcType=BIGINT},
			#{item.ip,jdbcType=VARCHAR},
			#{item.type,jdbcType=VARCHAR},
			#{item.size,jdbcType=FLOAT},
			#{item.fileId,jdbcType=BIGINT}
			)
		</foreach>
	</insert>

	<update id="updateById" parameterType="com.susu.oss.entity.UploadEntity">
		update `upload` set
		<if test="ip != null">
			ip =#{ip},
		</if>
		<if test="type != null">
			type =#{type},
		</if>
		<if test="size != null">
			size =#{size},
		</if>
		<if test="fileId != null">
			file_id =#{fileId},
		</if>
		where id =#{id}
	</update>

	<delete id="deleteById">
		delete from `upload` where id = #{id}
	</delete>

	<delete id="deleteBatch">
		delete from `upload`
		where id in
		<foreach collection="ids" item="id" index="index" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>